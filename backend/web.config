<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <!-- Manejadores para Node.js y Python -->
    <handlers>
      <!-- Manejador para Node.js -->
      <add name="iisnode" path="run.cjs" verb="*" modules="iisnode" />

      <!-- Manejador para Python -->
      <add name="PythonFastCGI" 
           path="*.py" 
           verb="*" 
           modules="FastCgiModule" 
           scriptProcessor="C:\Python39\python.exe|C:\Python39\Lib\wfastcgi.py" 
           resourceType="Either" />
    </handlers>

    <!-- Reglas de reescritura -->
    <rewrite>
      <rules>
        <!-- Regla para Node.js: Inspector de depuración -->
        <rule name="NodeInspector" patternSyntax="ECMAScript" stopProcessing="true">
          <match url="^run.cjs\/debug[\/]?" />
        </rule>

        <!-- Regla para contenido estático -->
        <rule name="StaticContent">
          <action type="Rewrite" url="public{REQUEST_URI}" />
        </rule>

        <!-- Regla para contenido dinámico de Node.js -->
        <rule name="DynamicContent">
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="True" />
          </conditions>
          <action type="Rewrite" url="run.cjs" />
        </rule>

        <!-- Regla para scripts de Python -->
        <rule name="PythonScripts">
          <match url=".*\.py$" />
          <action type="Rewrite" url="{R:0}" />
        </rule>
      </rules>
    </rewrite>

    <!-- Configuración de seguridad -->
    <security>
      <requestFiltering>
        <hiddenSegments>
          <remove segment="bin" />
        </hiddenSegments>
      </requestFiltering>
    </security>

    <!-- Configuración específica para iisnode (Node.js) -->
    <iisnode
      nodeProcessCommandLine="&quot;%programfiles%\nodejs\node.exe&quot;"
      debuggingEnabled="true"
      loggingEnabled="true"
      node_env="production" />

    <!-- Configuración específica para FastCGI (Python) -->
    <fastCgi>
      <application fullPath="C:\Python39\python.exe" 
                   arguments="C:\Python39\Lib\wfastcgi.py" 
                   maxInstances="4" 
                   idleTimeout="300" 
                   activityTimeout="30" />
    </fastCgi>
  </system.webServer>
</configuration>